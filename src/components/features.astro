---
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
// @ts-ignore
import { Icon } from "astro-icon/components";
import { t } from "i18next";

const features = [
  {
    title: "Software",
    description: "features.software",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Modernization",
    description: "features.modernization",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Cloud Architecture",
    description: "features.cloud",
    icon: "bx:bxs-data",
  },
  {
    title: "Automation",
    description: "features.automation",
    icon: "bx:bxs-bot",
  },
  {
    title: "Compliance",
    description: "features.compliance",
    icon: "bx:bxs-file-find",
  },
];
---

<div class="relative mx-auto max-w-5xl px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:text-center">
    <h2 class="text-base font-semibold leading-7 text-black dark:text-white">
      {t("features.title")}
    </h2>
    <p
      class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl"
    >
      {t("features.subtitle")}
    </p>
    <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
      {t("features.description")}
    </p>
  </div>
  <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
    <dl
      class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3"
    >
      {
        features.map((item) => (
          <div class="flex flex-col">
            <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
              <div class="h-5 w-5 flex-none text-black dark:text-white">
                <Icon name={item.icon} />
              </div>
              {item.title}
            </dt>
            <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
              <p class="flex-auto">{t(item.description)}</p>
              {/* <p class="mt-6">
								<Link href={item.url} style="muted" size="xs" class="leading-6 text-left text-black dark:text-white">
									{t("features.learn_more")}{" "}
									<span class="pl-1 text-black dark:text-white" aria-hidden="true">
										â†’
									</span>
								</Link>
							</p> */}
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</div>
